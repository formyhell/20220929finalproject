/* 모달 */
.modal {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.modal .bg {
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.6);
}

.modalBox {
	position: absolute;
	background-color: #fff;
	width: 80vh;
	height: 80vh;
	padding: 30px; /* 상우하좌 */
	border-radius: 10px;
}

.closeBtn {
	display: block;
	float: right;
	margin: 0 auto;
	border: 0px;
	background-color: #ffffff;
	color: #777777;
}

.hidden {
	display: none;
}
/* 별점 */
.starR{
	background: url("../../images/star/star2.png") no-repeat right 0;
	background-size: auto 75%;
	width: 22px;
	height: 30px;
	display: inline-block;
	text-indent: -9999px;
	cursor: pointer;
}
.starR.on{background-position:0 0;}

/* 테이블 */
#starTable{
	width: (80vh-15px);
	display: block;
	border: 0px;
}

#starTable th {
	padding: 5px;
	height: 30px;
	border: 2px solid;
	border-color: white;
}
#starTable td {
	margin: 0px;
	padding: 0px;
	border: 0px;
	height: 30px;
}
.rb {
	position: absolute;
	right: 0px;
	bottom: 0px;
	margin: 30px;
}

#starTable th:nth-of-type(1),#starTable td:nth-of-type(1){
	width: 8vh;
}
#starTable th:nth-of-type(2),#starTable td:nth-of-type(2){
	width: 10vh;
}
#starTable th:nth-of-type(3),#starTable td:nth-of-type(3){
	width: 10vh;
}
#starTable th:nth-of-type(4),#starTable td:nth-of-type(4){
	width: 10vh;
}
#starTable th:nth-of-type(5),#starTable td:nth-of-type(5){
	width: 178px;
}
#starTable th:nth-of-type(6){
	width: 165px;
}
#starTable td:nth-of-type(6){
	width: 135px;
}
#starTable tbody {
    display: block;
    height: 55vh;
    overflow: auto;
}
.profileBox {
    width: 30px;
    height: 30px; 
    border-radius: 70%;
    background: #BDBDBD;
    overflow: hidden;
}
.profile {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.listCard{
	border: 1px solid;
	border-color: #D1DFDC;
	border-radius: 20px;
	background: #F5F6FB;
	margin: 2px;
	padding: 3px;
}
.right{
	float:right
}